package io.inverno.test.irt;

import java.time.format.DateTimeFormatter;
import java.util.Comparator;
import static io.inverno.mod.irt.Pipes.*;
import static io.inverno.mod.irt.ReactivePipes.*;
import org.reactivestreams.Publisher;

option modes = {"BYTEBUF", "STRING", "STREAM", "REACTIVE_BYTEBUF", "REACTIVE_STRING"};
option charset = "utf-8";

(Publisher<Item> items) -> {<html>
	<head>
		<title>Titre</title>
	</head>
	<body>
		{items|sort(Comparator.comparing(Item::getTitle))|filter(item -> item.getTitle().equals("Item 2"))|index; t -> (t.getT1(), t.getT2())}
	</body>
</html>
}

(long index, Item item) -> {<div class="{@(index%2 == 0 ? "odd" : "even")}">
			<h1>{@(index + 1)}. {@item.title} {item.dateTime|dateTime(DateTimeFormatter.ISO_DATE_TIME)}</h1>
			{@if 
				(item.getType() == "error") -> {<p>ERROR</p>};
				(item.getType() == "warn") -> {<p>WARNING</p>};
				() -> {<p>INFO</p>}
			}{item.content; item_content}
		</div>}

item_content(String content) -> {
			<p>{@content}</p>}